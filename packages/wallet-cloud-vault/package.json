{
  "name": "@i3m/wallet-cloud-vault",
  "version": "2.5.5",
  "description": "A secure encrypted backup on the cloud for the i3-MARKET wallet",
  "keywords": [
    "vault",
    "wallet",
    "i3M-Wallet",
    "i3-MARKET",
    "cloud"
  ],
  "contributors": [
    "Fernando Román García <fernando.roman@upc.edu>",
    "Juan Hernández Serrno <j.hernandez@upc.edu>"
  ],
  "author": {
    "name": "Juan Hernández Serrano",
    "email": "j.hernandez@upc.edu",
    "url": "https://github.com/juanelas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/i3-Market-V2-Public-Repository/SP3-SCGBSSW-I3mWalletMonorepo.git",
    "directory": "packages/server-wallet"
  },
  "bugs": {
    "url": "https://github.com/i3-Market-V2-Public-Repository/SP3-SCGBSSW-I3mWalletMonorepo/issues"
  },
  "homepage": "https://github.com/i3-Market-V2-Public-Repository/SP3-SCGBSSW-I3mWalletMonorepo/tree/public/packages/wallet-cloud-vault#readme",
  "license": "EUPL-1.2",
  "engines": {
    "node": ">=16.x"
  },
  "main": "dist/index.js",
  "bin": {
    "wcv": "./dist/index.js"
  },
  "directories": {
    "build": "./build",
    "dist": "./dist",
    "types": "./types",
    "spec": "./dist/spec",
    "spec-src": "./src/spec-src"
  },
  "exports": {
    ".": "./dist/index.js",
    "./openapi.yaml": "./dist/spec/openapi.yaml",
    "./openapi.json": "./dist/spec/openapi.json",
    "./oas-ts-types": "./types/openapi.d.ts"
  },
  "scripts": {
    "openapi": "run-s openapi:json openapi:types",
    "openapi:json": "ts-node build/createOASJsonBundle.ts",
    "openapi:types": "ts-node build/openApiTypes.ts",
    "tsc": "tsc -p tsconfig.build.json",
    "build": "run-s clean openapi tsc",
    "start": "node dist/index.js",
    "predev": "npm run openapi",
    "dev:tsc": "concurrently \"npx tsc -p tsconfig.build.json --watch\" \"nodemon -q dist/index.js\"",
    "dev": "ts-node -P tsconfig.build.json src/index.ts",
    "clean": "rimraf dist src/spec/openapi.json src/spec/openapi.yaml",
    "test": "mocha -r ts-node/register 'test/**/*.ts'",
    "git:add": "git add -A",
    "version": "run-s build test git:add",
    "postversion": "git push --follow-tags"
  },
  "ts-standard": {
    "project": "tsconfig.json",
    "env": [
      "mocha"
    ],
    "globals": [
      "IS_BROWSER",
      "browser",
      "page",
      "chai"
    ],
    "ignore": [
      "dist/**/*",
      "examples/**/*",
      "types/**/*",
      "benchmark/**/*",
      "build/testing/mocha/mocha-init.js"
    ]
  },
  "devDependencies": {
    "@dtsgenerator/replace-namespace": "^1.5.4",
    "@types/express": "^4.17.15",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "concurrently": "^7.6.0",
    "dtsgenerator": "^3.16.2",
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "openapi-types": "^12.1.0",
    "rimraf": "^4.1.0",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@i3m/non-repudiation-library": "^2.5.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.1",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "pg": "^8.8.0"
  }
}
