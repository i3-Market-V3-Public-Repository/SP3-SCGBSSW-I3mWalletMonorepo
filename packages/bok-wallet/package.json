{
  "name": "@i3m/bok-wallet",
  "version": "1.1.8",
  "description": "",
  "types": "./types/index.d.ts",
  "main": "./dist/index.js",
  "scripts": {
    "build:ts": "tsc",
    "build": "run-s build:ts",
    "build:watch": "tsc -w --preserveWatchOutput --project tsconfig.json",
    "test": "jest --config=jest.config.js --coverage=false",
    "test:watch": "jest --config=jest.config.js --coverage=false --watch"
  },
  "keywords": [
    "wallet",
    "i3-market"
  ],
  "walletMetadata": {
    "name": "Bag of keys",
    "features": {
      "store": {
        "encryption": {
          "enabled": true
        }
      }
    },
    "functions": [
      {
        "name": "Wipe",
        "call": "wipe",
        "scopes": [
          "wallet"
        ]
      },
      {
        "name": "Import",
        "call": "importDid",
        "scopes": [
          "wallet"
        ]
      },
      {
        "name": "Execute Transaction",
        "call": "executeTransaction",
        "scopes": [
          "developer"
        ]
      },
      {
        "name": "Create Transaction",
        "call": "createTransaction",
        "scopes": [
          "developer"
        ]
      },
      {
        "name": "Query Balance",
        "call": "queryBalance",
        "scopes": [
          "developer"
        ]
      }
    ]
  },
  "author": "Fernando Román García",
  "license": "EUPL-1.2",
  "dependencies": {
    "@ethersproject/hdnode": "^5.3.0",
    "@i3m/base-wallet": "1.1.8",
    "debug": "^4.3.1",
    "did-jwt": "^5.2.0",
    "ethers": "^5.4.7",
    "lodash": "^4.17.21",
    "uint8arrays": "^2.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@jest-runner/electron": "^3.0.1",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.2",
    "@types/uuid": "^8.3.1",
    "dotenv": "^8.6.0",
    "electron": "^13.1.1",
    "jest": "^27.0.4",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-standard": "^10.0.0",
    "typescript": "^4.4.3"
  }
}
