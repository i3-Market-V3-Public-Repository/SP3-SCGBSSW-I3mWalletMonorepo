            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Signed data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SignOutput"
                }
              }
